<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forecast"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/forecast_grid_background"
    app:alignItems="center"
    app:flexWrap="wrap"
    app:justifyContent="space_around">

   <LinearLayout
        android:id="@+id/FoodContainer"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
        app:layout_flexBasisPercent="29%"
       android:orientation="vertical"
       >

       <TextView
           android:id="@+id/FoodTextLabel"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerInParent="true"
           android:layout_gravity="center"
           android:singleLine="true"
           android:text="Food"
           android:textSize="18sp"
           android:textStyle="bold"

           android:layout_margin="10dp"
           />
        <ImageButton
            android:id="@+id/FoodButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_thunder" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/SocialContainer"
        android:layout_width="wrap_content"
        android:layout_height="180dp"

        app:layout_flexBasisPercent="29%"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/SocailTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Social"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/SocialButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_snow" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/OutdoorContainer"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_flexBasisPercent="29%"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/OutdoorTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Outdoor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/OutdoorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_rain" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/IndoorContainer"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_flexBasisPercent="29%"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/IndoorTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Indoor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/IndoorButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_fog" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Activity1Countainer"
        android:layout_width="wrap_content"
        android:layout_height="180dp"

        app:layout_flexBasisPercent="29%"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/Activity1TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Activity"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/Activity1Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_sun" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/Activity2Countainer"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:layout_flexBasisPercent="29%"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/Activity2TextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="Activity 2"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />
        <ImageButton
            android:id="@+id/Activity2Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_cloud" />


    </LinearLayout>


</com.google.android.flexbox.FlexboxLayout>